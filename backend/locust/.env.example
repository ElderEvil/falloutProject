# Locust Performance Testing Configuration
# Copy this file to .env.locust and configure for your environment

# API Configuration
LOCUST_HOST=http://localhost:8000
LOCUST_API_VERSION=v1

# Test User Credentials
# You should create these users in your test database
LOCUST_TEST_USER_EMAIL=test@test.com
LOCUST_TEST_USER_PASSWORD=testpassword
LOCUST_SUPERUSER_EMAIL=admin@admin.com
LOCUST_SUPERUSER_PASSWORD=adminpassword

# Performance Thresholds (in milliseconds)
LOCUST_MAX_RESPONSE_TIME_MS=2000
LOCUST_P95_THRESHOLD_MS=1000

# Test Data Configuration
LOCUST_NUM_TEST_VAULTS=10
LOCUST_NUM_TEST_DWELLERS=50
