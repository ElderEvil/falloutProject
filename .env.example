#============================================
# FastAPI environment variables
#============================================
SECRET_KEY=your-secret-key-change-this-in-production
ENVIRONMENT=local  # local, staging, production

EMAIL_TEST_USER=test@example.com
FIRST_SUPERUSER_USERNAME=admin
FIRST_SUPERUSER_EMAIL=admin@example.com
FIRST_SUPERUSER_PASSWORD=changeme
USERS_OPEN_REGISTRATION=True

#============================================
# PostgreSQL database environment variables
#============================================
# Use 'localhost' for local dev without docker
# Use 'db' if running inside docker-compose
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fallout_db

#============================================
# Redis environment variables
#============================================
# Use 'localhost' for local dev without docker
# Use 'redis' if running inside docker-compose
REDIS_HOST=localhost
REDIS_PORT=6379

#============================================
# Celery environment variables
#============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

#============================================
# AI Provider environment variables
#============================================
# AI_PROVIDER options: openai, anthropic, ollama
# For local development, use ollama (free, runs locally)
# For production, use openai or anthropic (more reliable, faster)
AI_PROVIDER=openai
AI_MODEL=gpt-4o
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=
# For docker-compose, use: http://ollama:11434/v1
# For native development, use: http://localhost:11434/v1
OLLAMA_BASE_URL=http://localhost:11434/v1

#============================================
# MinIO environment variables
#============================================
# Use 'localhost' for local dev without docker
# Use 'minio' if running inside docker-compose
MINIO_HOSTNAME=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_DEFAULT_BUCKET=fallout-bucket

#============================================
# Email / SMTP environment variables
#============================================
# For local development (mailpit)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=False
SMTP_SSL=False

# For production, use real SMTP service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=True
# SMTP_SSL=False

EMAIL_FROM_ADDRESS=noreply@falloutshelter.com
EMAIL_FROM_NAME="Fallout Shelter"

#============================================
# Frontend environment variables
#============================================
FRONTEND_URL=http://localhost:5173

#============================================
# Flower (Celery monitoring) - Production only
#============================================
FLOWER_USER=admin
FLOWER_PASSWORD=changeme

#============================================
# Logging
#============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

#============================================
# Security & Rate Limiting
#============================================
ENABLE_RATE_LIMITING=True
RATE_LIMIT_REQUESTS=100  # Requests per window per IP
RATE_LIMIT_WINDOW=60  # Time window in seconds
AUTO_BAN_THRESHOLD=10  # Blocked requests before auto-ban
AUTO_BAN_DURATION=3600  # Ban duration in seconds (1 hour)
# Optional: IPInfo API token for geolocation
IPINFO_TOKEN=
# Optional: Comma-separated IPs to whitelist (bypass rate limiting)
SECURITY_WHITELIST_IPS=
# Optional: Comma-separated IPs to blacklist (block completely)
SECURITY_BLACKLIST_IPS=
